<div class="container">
  <h1>New game</h1>

  <div class="letters">
    <% @letters.each do |letter| %>
      <div class="block text-center">
        <%= letter %>
      </div>
    <% end %>
  </div>
  <p>What's the longest word you can find?</p>
  <div class="input-form">
    <form action="/score" method="POST" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input class="text-input" type="text" name="word" placeholder="Type your word here!">
      <input class="btn" type="submit" value="Play!">
    </form>
  </div>
</div>
